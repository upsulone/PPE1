{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Logs Utilisateurs {% endblock %}

{% block contenu %}

    <div class="wrapper" style="text-align: center">

        <br /><br />
        <div class="col-lg-12 col-sm-12">
            <div class="panel panel-default">
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <tr><th style="text-align: center">Email :</th><th style="text-align: center">Date de connexion :</th></tr>
                                {% for c in liste %}
                            <tr><td style="text-align: center">{{c.emailco}}</td><td style="text-align: center">{{c.dateco}}</td></tr>
                        {% endfor %}
                    </table>

                    {% set nb = form.nbpages %}

                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li>
                                <a href="index.php?page=logsadmin&nopage={{ 0 }}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {% for i in 1..nb %}
                                <li><a href="index.php?page=logsadmin&nopage={{ i-1 }}">{{ i }}</a></li>
                                {% endfor %}
                            <li>
                                <a href="index.php?page=logsadmin&nopage={{ nb-1 }}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>


                    </div>

                </div>
            </div>




        </div>
        <br/><br/><br/>

        {% endblock %}  
        