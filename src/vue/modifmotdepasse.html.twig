{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Modif mot de passe {% endblock %}

{% block contenu %}

    {% if form.valide is defined %}
        {% if form.valide == true %}
            <div class="wrapper" style="text-align: center">
                <h1 class="h3 mb-3 font-weight-normal">Mot de passe réinitialisé !</h1>
                <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=connexion">Me connecter</a></h1>
            </div>
        {% else %}
            <div class="wrapper" style="text-align: center">
                <h1 class="h3 mb-3 font-weight-normal">Erreur : {{form.message}}</h1>
                <h1 class="h3 mb-3 font-weight-normal"><a href="index.php">Accueil</a></h1>
            </div>
        {% endif %}

    {% else %} 
        <div class="wrapper" style="text-align: center">

            <br /><br />
            <h1 style="color: #2056ac">Réinitialisation de votre mot de passe</h1>

            <form class="form-signin" action="index.php?page=modifmotdepasse" method="post"
                  enctype="application/x-www-form-urlencoded">            
                <h6 class="h6 mb-3 font-weight-normal"> </h6>
                <img src="http://www.lelien.net/wp-content/uploads/2017/09/help.jpg" class="image-ronde">
                <h6 class="h6 mb-3 font-weight-normal"> </h6>


                <label for="inputEmail" class="sr-only">Email:</label>  
                <input type="email" id="inputEmail" name="inputEmail" class="form-control"
                       placeholder="Email" value="{{form.email}}" required autofocus>

                <label for="inputNewPassword" class="sr-only">Nouveau mot de passe:</label>
                <input type="password" id="inputNewPassword" name="inputNewPassword" class="form-control"
                       placeholder="Nouveau mot de passe">

                <label for="inputConfirmNewPassword" class="sr-only">Mot de passe:</label>
                <input type="password" id="inputConfirmNewPassword" name="inputConfirmNewPassword" class="form-control"
                       placeholder="Confirmation du nouveau mot de passe">
                
                <input type="hidden" id="inputId" name="inputId" class="form-control" value="{{form.id}}">
                
                

                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btNewMdp">Réinitialiser</button>

            </form>

        </div>
        <br/><br/><br/>




    {% endif %}
{% endblock %}    