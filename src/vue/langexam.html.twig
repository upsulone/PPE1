{% extends "base.html.twig" %}
{% block style %}
    <link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} LangByUser {% endblock %}

{% block contenu %}

    <div class="wrapper" style="text-align: center">

        <br/><br/>
        <div class="col-lg-6 col-sm-12">
            <div class="panel panel-default">
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <tr>
                            <th style="text-align: center">Utilisateur :</th>
                            <th style="text-align: center">Nombre de langage(s) maitris√©(s) :</th>
                        </tr>
                        {% for c in liste %}
                            <tr>
                                <td style="text-align: center">{{ c.utilisateurs }}</td>
                                <td style="text-align: center">{{ c.nbLangMaitrise }}</td>
                            </tr>
                        {% endfor %}
                    </table>

                </div>

            </div>
        </div>

        <div class="col-lg-6 col-sm-12">

            <u><h1 style="color: #2056ac">Combien de langages les utilisateurs maitrisent ?</h1></u>

            <!-- Graphique pour l'examen blanc -->
            <div style="overflow-x:auto;">
                <div class="col-lg-12 col-sm-12">

                    <div class="form-group" id="graphexam">
                        <img width=600 src="data:image/png;base64, {{ graph }}" alt=""/>
                    </div>

                    <div class="form-group">
                        <input class="form" id="saisieNb" name="saisieNb" type="text" placeholder="Nombre minimum"/>
                        <button id="btnValiderExam" name="btnValiderExam" class="btn btn-primary">Valider</button>
                    </div>

                </div>
            </div>



        </div>


    </div>
    <br/><br/><br/>





{% endblock %}

  {% block script %}
      <script src="js/exam.js">

      </script>
  {% endblock %}
