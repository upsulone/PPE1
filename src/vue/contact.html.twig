{% extends "base.html.twig" %} 
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %} 
{% block title %} {{ parent() }} Contact {% endblock %}       

{% block contenu %} 

    {% if form.valide is defined %}     
        {% if form.valide == true %}       
            <h1 class="h3 mb-3 font-weight-normal">{{form.nom}}</h1>       
            <h1 class="h3 mb-3 font-weight-normal">{{form.email}}</h1>   
            <h1 class="h3 mb-3 font-weight-normal">{{form.message}}</h1>          
        {% endif %}     
    {% else %} 

        <div class="wrapper" style="text-align: center">
            <br /><br />
            <h1 style="color: #2056ac">Contact</h1>
            <br/><br/>


            <form class="form-signin" action="index.php?page=contact" method="post" enctype="application/x-www-form-urlencoded">      
                <label for="inputName" class="sr-only">Nom</label>      
                <input type="text" id="inputnom" name="inputNom" class="form-control" placeholder="Nom" required autofocus>
                <label for="inputEmail" class="sr-only">Email:</label>      
                <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>
                <label for="textarea" class="sr-only">Message</label>
                <textarea id="description" name="message" class="form-control" placeholder="Message" required autofocus rows="15"></textarea>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btContact">Envoyer</button><br /><br />
            </form>
        </div>  

    {% endif %}
{% endblock %}