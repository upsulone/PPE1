{% extends "base.html.twig" %}
{% block style %}<link href="css/main.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Mon Compte {% endblock %}  

{% block contenu %}

    <div class="wrapper" style="text-align: center">
        <br /><br />
        <h1 style="color: #2056ac">Mon compte</h1>

        <br/><br/>
        <div id="main" class="container">

            <!-- Contenu -->
            <div class="row">
                <div style="float: left">
                    <h2 style="color: #2056ac">Mes informations :</h2><br/><br/></h4>
                    <u><b><h4>Votre email :</b></u></u> {{form.utilisateur.email}} </h4>
                    <u><b><h4>Votre nom :</b></u> {{form.utilisateur.nom}} </h4>
                    <u><h4><b>Votre prénom :</b></u> {{form.utilisateur.prenom}} </h4>
                    <u><h4><b>Votre rôle : </b></u>
                    {%if form.utilisateur.idRole == 1 %} <code> Administrateur </code> {%endif%}
                    {%if form.utilisateur.idRole == 2 %} <code> Développeur </code> {%endif%}
                    <br />
                    <u><b><h4>Vos lanuages :</b></u></u> PHP / Python / Java <!--{{form.utilisateur.languages}}--> </h4>
                    <u><h4><b>Votre date d'inscription :</b></u> {{form.utilisateur.dateinscription|date("d/M/Y")}} </h4>
                    <u><h4><b>Dernière connexion :</b></u> {{form.utilisateur.datedernier|date("d/M/Y")}} </h4>
                    <a href="index.php?page=modifcompte&email={{ form.utilisateur.email }}" class="bouton-compte">Modifier mon profil</a>
                    <a href="index.php?page=modifphoto&email={{ form.utilisateur.email }}" class="bouton-compte">Édition de la photo</a>
                    <br/>
                    <a href="index.php?page=languages" class="bouton-dessouscompte">Languages</a>


                </div>
                <div style="float: right">
                    <h2 style="color: #2056ac">Ma photo de profil :</h2>
                    {% if form.utilisateur.photo is not empty %}

                        <span><br/><br/><img width=300 src="images/{{form.utilisateur.photo}}" class="image-compte" alt="" /></span><br /><br /><br /><br /><br /><br /><br /><br />
                        {% endif %} 
                    
                </div>

                <br /><br /><br />

                <a style="float: left" href="index.php?page=deconnexion" class="btn btn-lg btn-primary btn-block">Se déconnecter</a>

            </div>
        </div>
    </div>









    <h1 class="h1 mb-3 font-weight-normal"> </h1>

{% endblock %}
